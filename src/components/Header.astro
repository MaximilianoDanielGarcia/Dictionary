---
import Select from "./Select.astro";
import Switch from "./Switch.astro";

---

<header>
    <div>
        <img src="/assets/images/logo.svg" alt="" />

        <div class="setup">
            <Select />
            <span class="line"></span>
            <Switch />
        </div>
    </div>
</header>

<style>
    header {
        display: grid;
        place-items: center;
        width: 100%;
        height: 36.5px;

        & > div {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 52%;
            min-width: 736px;
        }
    }

    .setup {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 253px;
        height: 100%;
    }

    .line {
        width: 1px;
        height: 32px;
        background: var(--light-gray);
    }

    @media screen and (width <= 810px) {
        header {
            width: 100%;
            min-width: 100%;
            padding-inline: 40px;

            & > div {
                width: 100%;
                min-width: 100%;
            }
        }
    }

    @media screen and (width <= 540px) {
        header {
            padding-inline: 24px;
        }

        img {
            width: 28px;
            height: 32px;
        }

        .setup {
            width: 203px;
        }
    }
    
</style>
